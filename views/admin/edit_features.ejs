<%- include("navbar.ejs") %>

<form action="/admin/update_features" method="post" enctype="multipart/form-data">
    <div class="container bg-white p-5">
        <div class="row">
            <div class="col-md-12">
                <h1>Edit Features</h1>
            </div>
            <input type="hidden" name="features_id" value="<%=edit_features[0].features_id%>">
            <div class="col-md-6">
                <label for="">Title</label>
                <input type="text" class="form-control" name="features_title" value="<%=edit_features[0].features_title%>">
            </div>
            <div class="col-md-6">
                <label for="">Description</label>
                <input type="text" class="form-control" name="features_desc" value="<%=edit_features[0].features_desc%>">
            </div>
            <div class="col-md-12 text-center mt-5">
                <button class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</form>


